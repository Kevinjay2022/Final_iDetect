<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationOfFourUsers">

    <Button
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/driver_btn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/bind"
        android:backgroundTint="#B9B4B4"
        android:text="Driver"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/service_center_btn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/bind"
        android:backgroundTint="#B9B4B4"
        android:text="Service Center"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driver_btn" />

    <Button
        android:id="@+id/mechanic_btn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/bind"
        android:backgroundTint="#B9B4B4"
        android:text="Mechanic"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_parts_btn" />

    <Button
        android:id="@+id/auto_parts_btn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/bind"
        android:backgroundTint="#B9B4B4"
        android:text="Auto Parts Shop"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_center_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>