<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile">

    <!-- Main Ui sa profile-->
    <FrameLayout
        android:id="@+id/fragmentProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#C5C5C5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fragProfPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="280dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Service ID"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profServID"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Name"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profile_name_ID"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Name of USer"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Address"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profile_address"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="user Address"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Email"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="user email"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Contact"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profile_contact"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="user number"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/DateOfBirthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Date of Birth"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/profile_DOB"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="user datevof birth"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <Button
                        android:id="@+id/profileUpdateBTN"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bind"
                        android:backgroundTint="#948F8F"
                        android:text="Update Profile"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/profileSubsBTN"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bind"
                        android:backgroundTint="#948F8F"
                        android:text="Subscription"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/profileLogoutBTN"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bind"
                        android:backgroundTint="#948F8F"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Subscription Layout-->

    <!-- Update Profile Layout-->
    <FrameLayout
        android:id="@+id/updateProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#C5C5C5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="11dp"
                    android:gravity="center"
                    android:text="Update Profile"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/updateBackButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/updateBackButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/back_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/UpdateProfile_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/editProfBtn"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="160dp"
                        android:text="Edit"
                        tools:ignore="TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Details Text boxes-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- For user with separate name-->
                    <LinearLayout
                        android:id="@+id/FnameLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                                android:text="First Name"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="2dp"
                                app:cardCornerRadius="5dp">

                                <EditText
                                    android:id="@+id/UpdateProfNameTBFN"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="First Name"
                                    android:inputType="textPersonName"
                                    android:paddingStart="10dp"
                                    android:textSize="13sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                                android:text="Last Name"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="2dp"
                                app:cardCornerRadius="5dp">

                                <EditText
                                    android:id="@+id/UpdateProfNameTBLN"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="Last Name"
                                    android:inputType="textPersonName"
                                    android:paddingStart="10dp"
                                    android:textSize="13sp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>


                    <!-- name hide for other-->
                    <LinearLayout
                        android:id="@+id/nameDetailsProf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="14dp"
                            android:text="Name"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            app:cardCornerRadius="5dp">

                            <EditText
                                android:id="@+id/UpdateProfNameTB"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="name"
                                android:inputType="textPersonName"
                                android:paddingStart="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="14dp"
                            android:text="Address"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            app:cardCornerRadius="5dp">

                            <EditText
                                android:id="@+id/UpdateProfAddressTB"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="address"
                                android:inputType="textPersonName"
                                android:paddingStart="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="14dp"
                            android:text="Contact"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            app:cardCornerRadius="5dp">

                            <EditText
                                android:id="@+id/UpdateProfContactTB"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="contact"
                                android:inputType="textPersonName"
                                android:paddingStart="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/updateDOBBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="14dp"
                            android:text="Date of Birth"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            app:cardCornerRadius="5dp">

                            <EditText
                                android:id="@+id/UpdateProfDAOBTB"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="10dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="date of birth"
                                android:inputType="textPersonName"
                                android:paddingStart="10dp"
                                android:textSize="13sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/profSaveUpdateBTN"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/bind"
                            android:backgroundTint="#948F8F"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </FrameLayout>

</FrameLayout>